<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ffffffff"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dip">

        <Button
            android:id="@+id/gc_checknet_btn"
            android:layout_width="87.5dip"
            android:layout_height="68dip"
            android:layout_alignRight="@+id/gc_check_bg"
            android:background="@drawable/selector_checknet_btn" />

        <ImageView
            android:id="@+id/gc_check_bg"
            android:layout_width="251dip"
            android:layout_height="150dip"
            android:layout_below="@+id/gc_checknet_btn"
            android:layout_centerHorizontal="true"
            android:src="@drawable/checknet_promt_bg" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dip"
        android:layout_marginTop="30dip"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_marginRight="9dip"
            android:src="@drawable/exclamation" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="网络不给力，请检查您的网络！"
            android:textColor="@color/ff333333"
            android:textSize="@dimen/textview_size_18" />
    </LinearLayout>

</LinearLayout>
