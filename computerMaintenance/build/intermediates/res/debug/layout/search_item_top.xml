<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.tom.ule.ui.view.image.UleImageView
                android:id="@+id/iv_searchlogo"
                android:layout_width="match_parent"
                android:layout_height="168dp"
                android:layout_gravity="center"
                android:scaleType="fitXY"

                />
        </LinearLayout>

        <com.computerdmaintenance.ui.component.Search_GridView
            android:id="@+id/sg_search_gridview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:cacheColorHint="#00000000"
            android:horizontalSpacing="1dp"
            android:listSelector="#00000000"
            android:numColumns="2"
            android:scrollbars="none"
            android:verticalSpacing="1dp"></com.computerdmaintenance.ui.component.Search_GridView>
    </LinearLayout>

