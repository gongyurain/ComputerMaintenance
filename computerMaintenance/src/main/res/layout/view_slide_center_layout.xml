<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_front"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff">

    <com.computerdmaintenance.ui.WGTContainer
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"></com.computerdmaintenance.ui.WGTContainer>

    <com.computerdmaintenance.ui.component.MrFooter
        android:id="@+id/main_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:visibility="gone"></com.computerdmaintenance.ui.component.MrFooter>

    <ImageView
        android:id="@+id/main_mobile_recharge_guide"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/mobile_recharge_guide"
        android:visibility="gone" />

</RelativeLayout>